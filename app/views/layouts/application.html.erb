<!DOCTYPE html>
<html>
  <head>
    <title>OmniApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

    <script scr="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/botstrap.min.js"></script>


  </head>

  <body>

   <nav class="navbar navbar-default">
     <div class="container-fluid">
 
   <div class="navbar-header">
    <button type="button" class="navbar-toggle colllapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
     </button>
   <h1><%= link_to root_path do %>Omni<% end %></h1>
   </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

    <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
           <li>Signed in as: <%= current_user.name %> - <%= image_tag(@auth['info']['image'],width: '50', heigth: '50', class: 'img-circle') %></li>
          <li><%= link_to "sign_out", 'sign_in', method: :delete %></li>
          <% else %>
           <li><%= link_to "auth/facebook" do %><%= image_tag('fb.png',width: '40',heigth: '40', class: 'img-circle') %><% end %></li>
       <% end %>
     </ul>
   </div>
 </div>
 </nav>

  <% flash.each do |key, value| %>
    <div class="alert alert-info"><%= value %></div>
   <% end %>

   <% if current_user %>
     <div class="text-center">
       <h1>Welcome, <%= current_user %></h1>
        <h4>Logged in with -> <strong><%= @auth['provider'].capitalize %></strong></h4>
    </div>
   <% end %>
  <%= yield %>
  </body>
</html>
